%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag(url: sign_in_path, class: "sign_in") do |f|
        %header
          %h1 Sign in
        %fieldset
          .form-group.row
            .col-sm-4
              = f.email_field :email
          .form-group.row
            .col-sm-4
              = f.password_field :password, label: "Password"
        %fieldset.form-group.action
          = f.submit value: "Sign In", class: "btn btn-default"
